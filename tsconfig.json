{
  "allowSyntheticDefaultImports": true,
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictTemplates": true,
    "fullTemplateTypeCheck": true, 
    "strictInjectionParameters": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "*"
      ],
      "sunbird-sdk": [
        "../node_modules/@project-fmps/sunbird-sdk"
      ],
      "sunbird-sdk/*": [
        "../node_modules/@project-fmps/sunbird-sdk/*"
      ],
      "@project-sunbird/common-consumption": [
        "../node_modules/@project-sunbird/common-consumption"
      ],
      "@project-sunbird/common-consumption/*": [
        "../node_modules/@project-sunbird/common-consumption/*"
      ],
      "common-form-elements": [
        "../node_modules/@project-sunbird/common-form-elements"
      ],
      "common-form-elements/*": [
        "../node_modules/@project-sunbird/common-form-elements/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts",
    "./typings/*.d.ts",
    "./content-player/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.data.ts",
    "src/**/__tests__/*.ts"
  ]
}
